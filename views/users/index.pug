extends ../layout/common
block content


    h1.text-center List Users
    div.d-flex.justify-content-between.my-5
        a.btn.btn-warning(href="/books/create") Create New
        .info.d-flex
            img.mx-4(src= "../" +user.avatar , alt="", width="40")
            p.text-xl.mr-auto Hello #{user.username} !!
    

    form.form-group(action="/users/search", method="GET", class="d-flex") 
        input.form-control(type="text", name="query", placeholder="Enter something about book", value= values)
        button.btn.btn-primary Search 
        
        
    table.table
        tr 
            th Username
            th Phone
            th Avatar
            th Action
        tr 
        each user in users
            tr 
                //- td 
                //-     img(src= book.avatar, width="32", border-radius="10")
                td= user.username
                td= user.phone
                td
                    img(src= "../" + user.avatar, alt="", width="32", border-radius="10")
                td
                    a.btn.btn-Light(href="/users/" + user._id) View
                    //- a(href="/users/remove/" + user.id) Delete
                    //- a(href="/users/update/" + user.id) Update

        